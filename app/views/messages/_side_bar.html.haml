.side-bar
  .side-bar__user-name
    .top-items
      .top-items__user-name
        = current_user.name
      .top-items__icons
        = link_to  new_group_path, class: "icon-btn" do
          = icon('far', 'edit', class: 'icon icon-edit')
          %span<>
        = link_to edit_user_path(current_user) ,class: "icon-btn" do
          = icon('fa', 'cog', class: 'icon icon-gear')

  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group-name" do
          .group__name
            = group.name
          .group__message-log
            = group.show_last_message
