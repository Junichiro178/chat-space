.chat-main
  .chat-main__group-info
    .left-info
      .left-info__name
        = @group.name
      .left-info__members
        Members : 
        - @group.users.each do |user|
          = user.name
    .right-info
      .right-info__edit
        = link_to edit_group_path(@group), class: "edit-btn" do
          Edit

  .chat-main__message-list
    = render @messages

  .chat-main__message-form
    = form_for [@group, @message],class: 'form' do |f|
      .form-box
        = f.text_field :content, class: 'form-box__text', placeholder: 'type a message'
        .form-box__mask
          = f.label :image, class: 'form-box__mask__image' do
            = icon('fas', 'image')
            = f.file_field :image, class: 'form-box__mask__image__file'
      = f.submit 'Send', class: 'submit-btn'
